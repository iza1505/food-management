{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "semi": "error",
    "eqeqeq": "warn",
    "default-case": "error",
    "max-classes-per-file": 1,
    "no-var": "error",
    "react/display-name": [
      0,
      {
        "ignoreTranspilerName": false
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2
      }
    ],
    
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "react/no-unused-prop-types": "error",
    "react/sort-prop-types": "warn"
  }
}
